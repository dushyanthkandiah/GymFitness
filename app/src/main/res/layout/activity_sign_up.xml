<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_bg"
    tools:context="com.example.abubakr.gymfitness.SignUpActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/content_frame"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp">

        <FrameLayout
            android:id="@+id/frmChooseFitness"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@color/colorAccent" />

        <FrameLayout
            android:id="@+id/frmPersonalInfo"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@color/colorMuted"  />

        <FrameLayout
            android:id="@+id/frmHeightWeight"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@color/colorMuted"  />

        <FrameLayout
            android:id="@+id/frmEmailPass"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@color/colorMuted"  />

    </LinearLayout>
</LinearLayout>
